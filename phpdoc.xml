<?xml version="1.0" encoding="UTF-8" ?>
<phpdoc>
    <parser>
        <target>Docs/</target>
        <markers>
            <item>TODO</item>
            <item>FIXME</item>
        </markers>
        <extensions>
            <extension>php</extension>
        </extensions>
